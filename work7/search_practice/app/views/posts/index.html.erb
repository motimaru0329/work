<h1>投稿一覧</h1>

<%= search_form_for @q, url: posts_path, method: :get do |f| %>
  <%= f.label :title_or_content_cont, "タイトル/内容検索" %>
  <%= f.search_field :title_or_content_cont %>
  <%= f.submit "検索" %>
<% end %>

<ul>
  <% @posts.each do |post| %>
    <li>
      <%= link_to post.title, post_path(post) %> by <%= post.user.name %>
    </li>
  <% end %>
</ul>
