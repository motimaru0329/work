<h1>新規料理</h1>
<%= form_with model: @cooking do |f| %>
  <p>
    <%= f.label :title, "料理名" %><br>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :content, "説明" %><br>
    <%= f.text_area :content %>
  </p>
  <p>
    <%= f.label :genre_id, "ジャンル" %><br>
    <%= f.collection_select(:genre_id, Genre.all, :id, :genre_name, include_blank: "選択して下さい") %>
  </p>
  <%= f.submit "登録" %>
<% end %>