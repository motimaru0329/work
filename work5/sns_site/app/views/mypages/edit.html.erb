<h2>プロフィール編集</h2>

<%= form_with(model: @user, url: mypage_path, method: :patch) do |f| %>
  <div>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :profile, "自己紹介" %><br>
    <%= f.text_area :profile %>
  </div>

  <div>
    <%= f.label :password %> (変更する場合のみ)<br>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div>
    <%= f.label :password_confirmation %><br>
    <%= f.password_field :password_confirmation %>
  </div>

  <div>
    <%= f.submit "更新" %>
  </div>
<% end %>

<%= link_to "マイページに戻る", mypage_path %>
